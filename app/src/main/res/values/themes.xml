<resources xmlns:tools="http://schemas.android.com/tools">
<style name="Theme.ScaleApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
<!-- Cores primárias para tema escuro -->
<item name="colorPrimary">@color/purple_200</item>
<item name="colorPrimaryVariant">@color/purple_700</item>
<item name="colorOnPrimary">@color/black</item>

<!-- Cores secundárias para tema escuro -->
<item name="colorSecondary">@color/teal_200</item>
<item name="colorSecondaryVariant">@color/teal_200</item>
<item name="colorOnSecondary">@color/black</item>

<!-- Surface colors -->
<item name="colorSurface">@color/dark_surface</item>
<item name="colorOnSurface">@color/white</item>

<!-- Background -->
<item name="android:windowBackground">@color/dark_background</item>

<!-- Status bar -->
<item name="android:statusBarColor">@color/dark_status_bar</item>
<item name="android:navigationBarColor">@color/dark_navigation_bar</item>

<!-- Componentes específicos -->
<item name="cardViewStyle">@style/CardViewStyle.Dark</item>

<!-- Text colors -->
<item name="android:textColorPrimary">@color/white</item>
<item name="android:textColorSecondary">@color/grey_300</item>
</style>

<style name="CardViewStyle.Dark" parent="@style/Widget.MaterialComponents.CardView">
<item name="cardBackgroundColor">@color/dark_card_background</item>
<item name="cardCornerRadius">8dp</item>
<item name="cardElevation">4dp</item>
<item name="strokeColor">@color/purple_200</item>
<item name="strokeWidth">1dp</item>
</style>
</resources>