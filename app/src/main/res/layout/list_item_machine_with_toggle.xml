<?xml version="1.0" encoding="utf-8"?>
<!-- Exemplo: res/layout/list_item_machine_with_toggle.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="8dp">

<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical">

<TextView
android:id="@+id/machine_name_number"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textStyle="bold"
android:text="Nome Maquina (123)" />

<TextView
android:id="@+id/machine_operator"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Operador: Operador X" />

<TextView
android:id="@+id/machine_details"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Produto: Prod Y | Dif: 1" />

</LinearLayout>

<Button
android:id="@+id/toggle_button"
android:layout_width="48dp"
android:layout_height="48dp"
android:layout_gravity="center_vertical"
android:layout_marginStart="8dp"
android:text="" /> <!-- O texto pode ser removido, usaremos cor -->

</LinearLayout>